<div class="search-container animate-fade-in">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h2 class="mb-0">Descubre restaurantes cerca de ti</h2>
        </div>
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" class="form-control search-input" placeholder="Buscar restaurantes...">
                <button class="btn btn-primary" type="button">
                    <i class="fas fa-search"></i> Buscar
                </button>
            </div>
        </div>
    </div>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    {{#each commerces}}
    <div class="col animate-fade-in" style="animation-delay: {{multiply @index 0.1}}s">
        <div class="commerce-card card">
            <div class="position-relative">
                <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                <button class="btn favorite-btn position-absolute top-0 end-0 m-3">
                    <i class="{{#if this.isFavorite}}fas{{else}}far{{/if}} fa-heart text-danger fs-4"></i>
                </button>
            </div>
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text text-muted">{{this.description}}</p>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="ratings">
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star-half-alt text-warning"></i>
                    </div>
                    <a href="/commerce/{{this.id}}" class="btn btn-primary">
                        <i class="fas fa-utensils me-2"></i>Ver Men√∫
                    </a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
