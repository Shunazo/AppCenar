<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h4>Seleccionar Dirección de Entrega</h4>
                </div>
                <div class="card-body">
                    {{#if addresses.length}}
                        {{#each addresses}}
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="radio" name="address" value="{{id}}" id="address{{id}}">
                            <label class="form-check-label" for="address{{id}}">
                                {{address}}
                            </label>
                        </div>
                        {{/each}}
                    {{else}}
                        <p>No tienes direcciones guardadas.</p>
                    {{/if}}
                    
                    <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#newAddressModal">
                        <i class="fas fa-plus"></i> Agregar Nueva Dirección
                    </button>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h4>Resumen del Pedido</h4>
                </div>
                <div class="card-body">
                    <div id="order-items">
                        {{#each cart.items}}
                        <div class="d-flex justify-content-between mb-2">
                            <span>{{name}} x {{quantity}}</span>
                            <span>${{total}}</span>
                        </div>
                        {{/each}}
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <span>Subtotal:</span>
                        <span>${{cart.subtotal}}</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>ITBIS (18%):</span>
                        <span>${{cart.itbis}}</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <strong>Total:</strong>
                        <strong>${{cart.total}}</strong>
                    </div>
                    <div class="d-grid gap-2 mt-3">
                        <button class="btn btn-primary" onclick="confirmOrder()">
                            Confirmar Pedido
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Nueva Dirección -->
<div class="modal fade" id="newAddressModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nueva Dirección</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="newAddressForm">
                    <div class="mb-3">
                        <label class="form-label">Dirección</label>
                        <textarea class="form-control" name="address" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar Dirección</button>
                </form>
            </div>
        </div>
    </div>
</div>
