<div class="category-header animate-fade-in">
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <h2>Menú - {{commerceName}}</h2>
            <div class="restaurant-info">
                <span class="badge bg-success me-2">Abierto</span>
                <i class="fas fa-clock me-1"></i> 30-45 min
                <i class="fas fa-star text-warning ms-3 me-1"></i> 4.5
            </div>
        </div>
        <div class="col-md-4">
            <div class="category-filter">
                <select class="form-select">
                    <option selected>Todas las categorías</option>
                    <option>Entradas</option>
                    <option>Platos Principales</option>
                    <option>Postres</option>
                    <option>Bebidas</option>
                </select>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="product-grid">
            {{#each products}}
            <div class="product-card animate-fade-in" style="animation-delay: {{multiply @index 0.1}}s">
                <div class="card">
                    <img src="{{image}}" class="card-img-top" alt="{{name}}">
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text">{{description}}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="price">${{price}}</span>
                            <button class="btn btn-primary add-to-cart">
                                <i class="fas fa-plus me-2"></i>Agregar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="cart-summary sticky-top">
            <h4><i class="fas fa-shopping-cart me-2"></i>Tu Pedido</h4>
            <div class="cart-items">
                <!-- Cart items will be dynamically added here -->
            </div>
            <div class="cart-total mt-3">
                <div class="d-flex justify-content-between mb-2">
                    <span>Subtotal:</span>
                    <span>$0.00</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>ITBIS:</span>
                    <span>$0.00</span>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <strong>Total:</strong>
                    <strong>$0.00</strong>
                </div>
                <button class="btn btn-primary w-100">
                    <i class="fas fa-check me-2"></i>Proceder al Pago
                </button>
            </div>
        </div>
    </div>
</div>
