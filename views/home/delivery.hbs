<div class="container mt-4">
    <h2>Panel de Delivery</h2>
    
    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Pedidos Activos</h5>
                </div>
                <div class="card-body">
                    {{#each activeOrders}}
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6>Pedido #{{id}}</h6>
                                    <p class="mb-1">{{business_name}} → {{delivery_address}}</p>
                                    <small class="text-muted">{{formatTime pickup_time}}</small>
                                </div>
                                <div>
                                    <button class="btn btn-success btn-sm update-status" 
                                            data-order-id="{{id}}" 
                                            data-status="delivered">
                                        Entregar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Estadísticas</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6>Pedidos Hoy</h6>
                        <h3>{{stats.today_orders}}</h3>
                    </div>
                    <div class="mb-3">
                        <h6>Calificación Promedio</h6>
                        <h3>{{stats.average_rating}} ⭐</h3>
                    </div>
                    <div>
                        <h6>Ganancias Hoy</h6>
                        <h3>{{formatPrice stats.today_earnings}}</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
