<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-exclamation-triangle text-warning fa-5x mb-3"></i>
                    <h3>{{title}}</h3>
                    <p>{{message}}</p>
                    {{#if error.stack}}
                        <pre class="text-start bg-light p-3">{{error.stack}}</pre>
                    {{/if}}
                    <a href="/" class="btn btn-primary">
                        Volver al Inicio
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
