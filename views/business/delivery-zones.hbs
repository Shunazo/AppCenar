<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Zonas de Entrega</h2>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#zoneModal">
            <i class="fas fa-plus"></i> Nueva Zona
        </button>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div id="zoneMap" style="height: 600px;"></div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Zonas Configuradas</h5>
                </div>
                <div class="list-group list-group-flush">
                    {{#each zones}}
                    <div class="list-group-item" data-zone-id="{{id}}">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="mb-1">{{name}}</h6>
                            <div class="btn-group btn-group-sm">
                                <button class="btn btn-outline-primary edit-zone" 
                                        data-zone="{{toJSON this}}">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-outline-danger delete-zone">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                        <p class="mb-1">
                            <small class="text-muted">
                                Delivery: ${{delivery_fee}} | Mínimo: ${{min_order}}
                            </small>
                        </p>
                        <p class="mb-0">
                            <small class="text-muted">
                                Tiempo estimado: {{estimated_time}} min
                            </small>
                        </p>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Zone Modal -->
<div class="modal fade" id="zoneModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nueva Zona de Entrega</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="zoneForm">
                    <input type="hidden" name="zoneId">
                    <div class="mb-3">
                        <label class="form-label">Nombre de la Zona</label>
                        <input type="text" class="form-control" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Costo de Delivery</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="number" class="form-control" name="deliveryFee" 
                                   min="0" step="0.01" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Pedido Mínimo</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="number" class="form-control" name="minOrder" 
                                   min="0" step="0.01" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Tiempo Estimado (minutos)</label>
                        <input type="number" class="form-control" name="estimatedTime" 
                               min="1" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="saveZone">Guardar</button>
            </div>
        </div>
    </div>
</div>
